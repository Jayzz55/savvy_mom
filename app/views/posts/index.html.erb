<table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Image</th>
          <th>Description</th>
          <th>Price</th>
          <th>Saving</th>
          <th>Price information</th>
          <th>Unit price</th>
          <th>Shop</th>
        </tr>
      </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image %></td>
        <td><%= post.description %></td>
        <td><%= post.price_info %></td>
        <td><%= post.saving %></td>
        <td><%= post.saving_info %></td>
        <td><%= post.unit_price %></td>
        <td><%= image_tag post.catalogue.shop_logo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>